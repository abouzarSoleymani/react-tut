{
    "editor.codeActionsOnSave": {
      "source.fixAll": true,
        // For ESLint
      "source.fixAll.eslint": true,
        // For TSLint
      "source.fixAll.tslint": true,
      // For Stylelint
      "source.fixAll.stylelint": true
    },
    "editor.formatOnSave": true,
    "files.exclude": {
      "node_modules/": true,
      ".history": true,
      ".next": true
  }
}
